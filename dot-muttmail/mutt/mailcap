# MS Word documents
application/msword; ~/dotfiles/dot-muttmail/view-attachment.sh %s "-" '/Applications/LibreOffice.app'
application/vnd.ms-excel; ~/dotfiles/dot-muttmail/view-attachment.sh %s "-" '/Applications/LibreOffice.app'
application/vnd.openxmlformats-dot-muttmaildocument.presentationml.presentation; ~/dotfiles/dot-muttmail/view-attachment.sh %s "-" '/Applications/LibreOffice.app'
application/vnd.oasis.opendocument.text; ~/dotfiles/dot-muttmail/view-attachment.sh %s "-" '/Applications/LibreOffice.app'

# Images
image/jpg; ~/dotfiles/dot-muttmail/quicklook.sh %s jpg
image/jpeg; ~/dotfiles/dot-muttmail/quicklook.sh %s jpg
image/pjpeg; ~/dotfiles/dot-muttmail/quicklook.sh %s jpg
image/png; ~/dotfiles/dot-muttmail/quicklook.sh %s png
image/gif; ~/dotfiles/dot-muttmail/quicklook.sh %s gif
video/mp4; ~/dotfiles/dot-muttmail/quicklook.sh %s mp4
application/pdf; ~/dotfiles/dot-muttmail/quicklook.sh %s pdf

# HTML
text/html; w3m -I %{charset} -T text/html; copiousoutput;
text/plain; nvim %s

# Unidentified files
application/octet-stream; ~/dotfiles/dot-muttmail/view-attachment.sh %s "-"
