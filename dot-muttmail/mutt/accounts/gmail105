set from = "gcman105@gmail.com"
set sendmail = "/usr/local/bin/msmtp -a gmail105"

# Set folders
set spoolfile = "+gmail105/INBOX"
set mbox = "+gmail105/archive"
set postponed = "+gmail105/drafts"
set record = "+gmail105/sent"
set trash = "+gmail105/trash"

# Alternate email addresses.

# custom signaure
set signature = ~/.mutt/signatures/default

color status red default

macro index o "<shell-escape>mbsync gmail105<enter>" "run mbsync to sync mail for this account"

macro index,pager s \
  "<enter-command>set my_old_resolve=\$resolve noresolve<enter>\
  <tag-prefix><clear-flag>n<enter-command>set resolve=\$my_old_resolve<enter>\
  <save-message>+gmail105/junk<enter>" \
  "mark as read and move to junk folder"

macro index,pager a \
  "<save-message>+gmail105/archive<enter>"  \
  "move message to the archive"

macro index,pager i \
  "<save-message>+gmail105/INBOX<enter>"  \
  "move message to the inbox"
